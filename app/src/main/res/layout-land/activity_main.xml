<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/sayi1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Enter number 1 :"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/sayi2Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sayi2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Enter number 2 : "
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/sayi1Text"
        app:layout_constraintTop_toBottomOf="@+id/sayi1Text" />

    <TextView
        android:id="@+id/sonucText"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginEnd="202dp"
        android:layout_marginBottom="21dp"
        android:text="Result : 0 "
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/sonucText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sayi2Text">

        <Button
            android:id="@+id/button"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:background="#2BCDB5"
            android:onClick="topla"
            android:text="+" />

        <Button
            android:id="@+id/button2"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:background="#2BCD85"
            android:onClick="cikart"
            android:text="-" />

        <Button
            android:id="@+id/button3"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:background="#2BCD85"
            android:onClick="carp"
            android:text="*" />

        <Button
            android:id="@+id/button4"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:background="#2BCD85"
            android:onClick="bol"
            android:text="/" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
